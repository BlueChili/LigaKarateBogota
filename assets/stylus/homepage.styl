// cs: Caroussel
.cs
  position relative

.cs-logo
  position absolute
  z-index 2
  top 2vw
  left 2vw
  height 9vw
  width 9vw
  filter drop-shadow(2px 2px 4px rgba(#fff 0.55))

.cs-itemWrapper
  position relative
  width 100vw
  height 45vw
  background rgba(#0d111c 90%)
  white-space nowrap
  overflow-x auto
  overflow-y hidden
  -webkit-scroll-snap-type mandatory
  scroll-snap-type mandatory
  -webkit-scroll-snap-destination 50% 50%
  scroll-snap-destination 50% 50%
  scroll-behavior smooth
  @supports not ((-webkit-scroll-snap-type: mandatory) or (scroll-snap-type: mandatory))
    overflow-x hidden

.cs-item
  position relative
  width 100vw
  height 45vw

.cs-item__img
  width 100%
  height 45vw
  object-fit cover
  object-position 50% 20%
  vertical-align top
  -webkit-scroll-snap-coordinate 50% 50%
  scroll-snap-coordinate 50% 50%

.cs-item__info
  padding 3vw
  width 100%
  vertical-align bottom
  position absolute
  left 0
  bottom -45vw
  background rgba(#1D222A 76%)
  transition background 0.4s ease-out
  &:hover
    background rgba(#0d111c 90%)

.cs-item__title
  color white
  padding-bottom 12px
  @media screen and (max-width: 768px)
    font-size 3em
  @media screen and (max-width: 505px)
    font-size 2em

.cs-item__description
  font-size 18px
  color white
  width 10em
  font-family 'Raleway'
  @media screen and (max-width: 767px)
    display none

.cs-item__imgFilter
  // background linear-gradient(to bottom, rgba(#f00 0.2), transparent 90%), linear-gradient(to right, rgba(#f00 0.62), transparent 40%), linear-gradient(130deg, rgba(#f00 0.71), transparent), linear-gradient(50deg, yellow, rgba(#ff0, 0.7) 50%, transparent)
  background url('/img/gradients-pure.png')
  background-size cover
  mix-blend-mode multiply
  width 100%
  height 46vw
  position absolute
  top 0
  left 0

.cs-controls
  display flex
  justify-content center
  padding-top 2em
  @media screen and (max-width: 1366px)
    padding 1em 0
  @media screen and (max-width: 350px)
    padding-bottom 0.4em

.cs-controlIcons
  font-size 16px
  padding 0
  margin 0 1px
  cursor pointer
  color red

.icon-angle-left, .icon-angle-right
  font-size 4vw
  font-weight 100
  color white
  opacity 0.7
  margin-top -2%
  position absolute
  z-index 11
  bottom 22.5vw
  cursor pointer
.icon-angle-left
  left 0
.icon-angle-right
  right 0

// as: Article Summary
.as
  font-size 14px
  margin-bottom 2em
  p, em, strong, ul, li, a, h1, h2, h3, h4, h5, h6
    max-width 600px
    margin auto
  p, em, strong, ul, li, a
    font-size 1em
  h1
    font-size 1.8em
    font-weight 100
    padding 7px 14px
  h2, h3, h4, h5, h6
    font-size 1.3em
    font-weight 100
    padding 7px 14px
  ul
    padding-left 1em
    list-style square
    li
      margin-left 1em
      margin-bottom 0.3em
  @media screen and (min-width 415px)
    font-size 16px
    margin-bottom 3em
    h1
      font-size 3em
    h2
      font-size 2em
    h3, h4, h5, h6
      font-size 1.5em

.as-headLink
  text-align center
  text-decoration none
  font-weight 300

.as-headLine
  font-size 2em

.as-description
  font-size 1.0em

.as-coverImage
  display block
  margin 0 auto
  margin-bottom 1em
  height auto
  width 100%
  max-width 800px
