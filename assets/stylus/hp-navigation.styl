.hn
  padding 4em 0
  padding-top 1em
  display flex
  flex-flow row wrap
  justify-content center
  @media screen and (max-width: 414px)
    padding 0
    flex-flow column
  @media screen and (max-width: 1366px)
    padding 0

.hn-icons
  font-size 22px
  color #D40221
  @media screen and (max-width: 768px)
    font-size 19px
.hn-link[href="https://www.facebook.com/ligakaratebogota?fref=ts"]
  span
    color #3b5998
.icon-facebook
  &::before
    color #3b5998

.hn-link
  text-decoration none
  position relative
  font-size 19px
  padding 0 0.5em
  margin 0.7em 1em
  @media screen and (max-width: 768px)
    text-align center
    margin 0.5em
    font-size 16px
  @media screen and (min-width: 769px)
    flex 0 0 12em
    min-width 12em
  span
    position relative
    font-size 19px
    font-weight 400
    color #D40221
    &:focus::after,
    &:hover::after,
    &:hover::before,
    &:focus::before
      content ''
      height 2px
      width 100%
      background red
      position absolute
      right: 0
      z-index: 1000
      animation hn-hover 400ms ease-out 0s running
      @media screen and (max-width: 768px)
        height 1px
    &:hover::before,
    &:focus::before
      top -0.4em
      transform-origin left
      @media screen and (max-width: 768px)
        top -0.2em
    &:focus::after,
    &:hover::after
      top 1.5em
      transform-origin right
    @media screen and (max-width: 768px)
      font-size 16px
      margin 0.3em
    @media screen and (max-width: 350px)
      font-size 14px
      margin 0.2em

@keyframes hn-hover
  0%
    transform scaleX(0)
  100%
    transform scaleX(1)
