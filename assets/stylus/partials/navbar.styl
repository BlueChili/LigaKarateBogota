.nav-full
  font-size 1rem
  display flex
  flex-flow column
  text-align center
  z-index 1
  a
    text-decoration none
    font-size 1.3em
    padding 0.3em .5em
    transition color, background 0.5s
    background rgba(255, 255, 40, 0)
    &:hover
      color white
      background rgba(213, 15, 23, 1)
  a.current-area
      border-bottom 3px #D40221 solid
  .icon-facebook
    display flex
    background none
    color #273C7B
    align-self center
    text-align center
    font-size 1.8em
    width 1em
    padding 0.2em
    transition color 1s, background 1s
  @media screen and (max-width 600px)
    order -2
    box-shadow 0px 0px 5px #888
  @media screen and (min-width 601px)
    border-right 1px solid #67a9ef
    width 22.3em
    margin-right 1em
