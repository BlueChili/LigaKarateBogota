.master-container
	display flex
	flex-direction column
	flex 100%
	.headline
		display flex
		flex-flow row
		justify-content center
		margin 0
		padding 0
		h1
			font-size 3em
	.content-container
		display flex
		flex-flow column
		margin-top 1em
		.card-container
			display flex
			flex-direction column
			padding-top 1em
			margin-bottom 1em
			// box-shadow 1px 2px 5px #888
			padding-bottom 0.2em
			.gallery-card-video, .gallery-card-image
				display flex
				flex-direction column
				color white
				background black
				margin 0.5em 0.5em 1em
				padding 0.5em
				box-shadow 0px 0px 3px 3px #111
				iframe
					max-width 100%
					margin 0 auto
				h4
					font-size 1.4em
					padding 0.3em 0
					text-align center
					line-height 1.5
.nav-full
	font-size 1rem
	display flex
	flex-flow column
	text-align center
	z-index 1
	a
		text-decoration none
		font-size 1.3em
		padding 0.3em .5em
		transition color, background 0.5s
		background rgba(255, 255, 40, 0)
		&:hover
			color white
			background rgba(213, 15, 23, 1)
	a.current-area
			border-bottom 3px #D40221 solid
	.icon-facebook
		display flex
		background none
		color #273C7B
		align-self center
		text-align center
		font-size 1.8em
		width 1em
		padding 0.2em
		transition color 1s, background 1s
	@media screen and (max-width 600px)
		order 2
		box-shadow 0px 0px 5px #888
	@media screen and (min-width 601px)
		border-right 1px solid #67a9ef
		width 22.3em
		margin-right 1em

@media screen and (min-width 601px)
	.master-container
		flex-direction column
		width 68em
		margin 0 auto
		.headline
			padding 0
			margin-bottom 0.3em
			h1
				padding 0.5em

		.content-container
			display flex
			flex-flow row nowrap
			.card-container
				display flex
				flex-flow row wrap
				flex 100%
				padding 0
				margin 0
				justify-content space-around
				.gallery-card-video, .gallery-card-image
					display flex
					flex-direction column
					width 45%
					color white
					background rgb(21,21,21)
					margin 0.5em
					padding 0.5em
					box-shadow 1px 2px 5px #888
					iframe
						max-width 100%
					h4
						font-size 1.4em
						padding 0.3em 0
						text-align center
						line-height 1.5

