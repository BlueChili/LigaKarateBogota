hr
 margin 1.5em

.master-container
	display flex
	flex-direction column
	flex 100%
	.headline
		display flex
		flex-flow row
		justify-content center
		margin-bottom 1em
		padding 0 2em 0
		h1
			font-size 3em
			text-align center
	.content-wrapper
		display flex
		flex-flow column
		margin-top 1em
		.results-wrapper
			display flex
			flex-flow column wrap
			// background pink
			// box-shadow 1px 2px 5px #888
			margin-bottom 1em

.news
  display flex
  flex-flow column
  box-shadow 0px 1px 2px rgba(0,0,0,0.1)
  color white
  background #d40221       // My really nice green #47c15a
  font-size 2em
  text-align center
  width 100%
  padding-top 20px
  font-family 'Raleway'
  margin-bottom 1em
  :first-child
    border-top 1px solid #b8cfef
    margin-top 20px
  a
    font-family 'Lato'
    font-size 0.6em
    text-align center
    padding 0.8em
    text-decoration none
    text-align left
    border-bottom 1px solid #b8cfef
    background white

.result-card
  display flex
  flex-flow column
  text-align center
  padding-bottom 1em
  margin-bottom 1em
  box-shadow 0px 1px 2px rgba(0,0,0,0.1)
  button
    cursor pointer
  h5
    text-transform capitalize
    background #d40221    // #47c15a
    font-size 2em
    padding 0.5em
    color white
  .data-container
    display flex
    justify-content center
    width 100%
    .cell
      display flex
      flex-flow column
      font-size 1.2em
      text-align center
      margin 0
      min-width 140px
      h6
        background #b8cfef
      p, h6
        border 1px solid white
        padding 0.5em
        font-size 0.9em
        text-transform capitalize


.nav-full
	font-size 1rem
	display flex
	flex-flow column
	text-align center
	z-index 1
	a
		text-decoration none
		font-size 1.3em
		padding 0.3em .5em
		transition color, background 0.5s
		background rgba(255, 255, 40, 0)
		&:hover
			color white
			background rgba(213, 15, 23, 1)
	a.current-area
			border-bottom 3px #D40221 solid
	.icon-facebook
		display flex
		background none
		color #273C7B
		align-self center
		text-align center
		font-size 1.8em
		width 1em
		padding 0.2em
		transition color 1s, background 1s
	@media screen and (max-width 1023px)
		order 2
		box-shadow 0px 1px 2px rgba(0,0,0,0.1)
	@media screen and (min-width 1024px)
		border-right 1px solid #67a9ef
		width 22.3em
		margin-right 1em


@media screen and (min-width 1024px)
