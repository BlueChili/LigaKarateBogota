mobile-title = 1rem
mobile-body-text = 0.7rem

body
	@media screen and (max-width 600px)
		font-size mobile-body-text
		.about, .info, .news
			flex 1 100%
		header
			h1
				display none
		.links
			font-size 0.8rem
			display flex
			flex-flow column nowrap
			height auto

