.contact-container
	display flex
	flex-direction column
	flex 100%
	@media screen and (min-width 601px)
		width 60em
		margin 0 auto
	.headline
		display flex
		flex-flow row
		justify-content center
		order 1
		margin-bottom 1em
	form
		display flex
		flex-direction column
		order 2
		padding-top 1em
		margin-bottom 3em
		box-shadow 1px 2px 5px #888
		padding-bottom 2em
		label, input, textarea
			display flex
		label
			font-family 'Raleway'
			flex auto auto 100%
			flex-flow column
			font-size 1.2em
			margin-bottom 1em
		input
			font-size 1em
			height 2.5em
			font-family 'Lato'
			font-weight 300
			margin-top 0.3em
		textarea
			height 9em

		[type='submit']
			width 7.5em
			height 3.8em
			border 4px solid #f7f406
			background white
			text-transform uppercase
			font-family 'Raleway'
			font-weight 400
			transition background 0.5s, border 0.5s
			align-self flex-end
			margin-right 0.5em
			&:hover
				background #41CC7F
				border #41CC7F

		.contact-info
			display flex
			flex-flow column
			label
				display flex
				flex-direction column
				input
					display flex
					margin 10px 0
		

.nav-full
	font-size 1rem
	display flex
	flex-flow column
	text-align center
	z-index 1
	order 3
	a
		text-decoration none
		font-size 1.3em
		padding 0.3em .5em
		transition color, background 0.5s
		background rgba(255, 255, 40, 0)
		&:hover
			color white
			background rgba(213, 15, 23, 1)
	a.current-area
			border-bottom 3px #D40221 solid
	.icon-facebook
		display flex
		background none
		color #273C7B
		align-self center
		text-align center
		font-size 1.8em
		width 1em
		padding 0.2em
		transition color 1s, background 1s
	@media screen and (min-width 601px)
		border-right 1px solid #67a9ef
		width 16em
		margin-right 1em


		
.success
	display flex
	flex-flow row nowrap
	justify-content center
	font-size 3em
	color #41CC7F
	
.success-container
	p
		font-size 1.4em
		margin-top 0

@media screen and (min-width 601px)
	.contact-container
		flex-direction row
		form
			width 50em
			.contact-info
				flex-flow row
				margin 1.4em auto
				label
					flex 50%
					margin auto 1em
			label
				margin 1.5em 1em
				input
					margin-top 0.8em
				textarea
					margin-top 0.8em
					
				

