body
	@media screen and (max-width 600px)
		header
			h1.header-title
				display none
		article
			width auto
			h1
				margin auto
		nav
			order 1
			margin auto
			width 100%
		.article-container
			flex-flow column
			align-items center
		
@media all and (min-width 601px)
	.info
		order 1
		flex-flow column
	.article
		flex 5
		flex-flow column
	.nav-full
		border-right 1px solid #67a9ef
		width 16em
		margin-right 1em
		margin-top 111px
	article
		padding-bottom 1em
		margin-bottom 1em
		border-bottom 2px solid red_primary
	.club-card-container
		margin-top 30px
		margin-left 10px



.article-container
	display flex
	flex-flow row
	justify-content center
		

.nav-full
	font-size 1rem
	display flex
	flex-flow column
	text-align center
	z-index 1
	a
		text-decoration none
		font-size 1.3em
		padding 0.3em .5em
		transition color, background 0.5s
		background rgba(255, 255, 40, 0)
		&:hover
			color white
			background rgba(213, 15, 23, 1)
	a.current-area
			border-bottom 3px #D40221 solid
	.icon-facebook
		display flex
		background none
		color #273C7B
		align-self center
		text-align center
		font-size 1.8em
		width 1em
		padding 0.2em
		transition color 1s, background 1s

article
	display flex
	flex-direction column
	font-size 1rem
	width 50em
	color black
	border-bottom 1px solid black red_primary
	h1
		text-align center
		padding 0.5em
		margin-left -6em
	img
		width 90%
		margin 0 5%
	p
		line-height 1.5
		font-size 1.2em
		margin 1em auto
		em, i
			font-style italics
			font-size inherit
		strong, b
			font-size inherit
			font-style bold
	a
		color black
		text-decoration none
		
.club-card-container
	display flex
	flex-flow row wrap
	justify-content space-around

.club-logo
	margin 0.7em auto
	display block
	// box-shadow 0px 0px 4px rgba(26, 69, 123, 0.43)
	border-radius 10px

aside.club-card
	font-size 1rem
	flex-direction column
	width 13em
	border 1px solid #d40221
	border-radius 10px
	padding 0.5em
	transition box-shadow 0.5s
	margin-bottom 30px
	
	&:hover
		box-shadow 0px 0px 5px #d40221
	h3
		font-size 1.5em
		padding 0.3em
	
	p
		font-size 1.15em
		margin 0
	
	.label
		background #f7f406

.card-icons
	display flex
	flex-flow row
	justify-content space-between
	@media screen and (min-width 601px)
		justify-content space-around
	a
		font-size 2.3em
		@media screen and (min-width 601px)
			font-size 1.5em

.thumbnail
	cursor pointer	

.overlay-organigrama
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	opacity 0
	visibility hidden
	background rgba(212, 2, 33, 0.6)
	&.open
		opacity 1
		visibility visible
		z-index 2
	img
		width 90%
		margin auto
		height auto
		box-sizing padding-box
		position absolute
		top 0
		bottom 0
		left 0
		right 0
		
.icon-cancel
	font-size 30px
	position fixed
	top 20px
	right 20px
	border 2px solid white
	cursor pointer