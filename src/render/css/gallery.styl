@import 'fontello.styl'

body
	background #1E2028
	margin 0
	padding 0

//												Navigation menu
.nav-menu
	button.nav-toggle
		position fixed
		font-size 40px
		top 0px
		left 0px
		margin 0.4em
		padding 0px 14px 6px
		background none
		color rgba(255,255,255, 1)
		transition left 0.3s, color 0.8s
		border 1px solid white
		box-shadow 0px 0px 4px rgba(30,30,30, 0.6)
		cursor pointer
		z-index 1000
	button.unfold-toggle
			z-index 1000
			left 199px
	.nav-full
		position fixed
		// 199px negative
		left -203px
		top 0px
		bottom 0px
		font-family 'Lato'
		font-weight 300
		padding 1em
		transition left 0.3s
		background rgba(30,32,40,0.8)
		z-index 1000
		a
			display block
			text-decoration none
			color rgba(255,255,255,0.8)
			font-size 18px
			line-height 1.5em
	.nav-active
		z-index 1000
		left 0px


