extends layouts/results-ly

block title
	title Resultados Deportivos de la LKB

block headline
	h1 Resultados de la LKB

block results
	section.news Karate Guajira 2015 Día 1
		a.icon-file-pdf(href='/files/docs/SENIOR-Tabla-de-Medalleria.pdf') Tabla de Medallería
		a.icon-file-pdf(href='/files/docs/SENIOR-Planillas-Masc.pdf') Senior Planillas Masculino
		a.icon-file-pdf(href='/files/docs/SENIOR-Planillas-Feme.pdf') Senior Planillas Femenino
		a.icon-file-pdf(href='/files/docs/SENIOR-Resultados-Masc.pdf') Senior Resultados Masculino
		a.icon-file-pdf(href='/files/docs/SENIOR-Resultados-Feme.pdf') Senior Resultados Femenino

	.result-card(ng-controller='CicloController as ciclo' ng-init='i = 0')
		h5 participación campeonatos y preparación 2015
		button(ng-click='i++') segundo evento
		p {{i}}
		.data-container(ng-repeat='event in ciclo.evento | limitTo: 1')
			.cell
				h6 sede
				p {{event.sede}}
			.cell
				h6 evento
				p {{event.evento}}
			.cell
				h6 modalidad
				p {{event.modalidad}}
			.cell
				h6 categoría
				p {{event.categoria}}
			.cell
				h6 atletas
				p {{event.atletas}}
			.cell
				h6 entrenadores
				p {{event.entrenadores}}
			.cell
				h6 oficiales
				p {{event.oficiales}}
			.cell
				h6 oro
				p {{event.oro}}
			.cell
				h6 plata
				p {{event.plata}}
			.cell
				h6 bronce
				p {{event.bronce}}
